@model ProgrammersBlog.Entities.Dtos.ArticleDto
@{

    Layout = "_ArticleLayout";
    ViewBag.Title = Model.Article.Title;
    ViewBag.Description = Model.Article.SeoDescription;
    ViewBag.Author = Model.Article.SeoAuthor;
    ViewBag.Tags = Model.Article.SeoTags;
}


<section class="blog_area single-post-area section-padding">
      <div class="container">
         <div class="row">
            <div class="blog_left_sidebar">
            <div class="col-lg-8 posts-list">
            
               <div class="single-post">
                  <div class="feature-img">
                        <img class="img-fluid" src="~/img/@Model.Article.Thumbnail" alt="">
                  </div>
                  <div class="blog_details">
                     <h2>@Model.Article.Title
                     </h2>
                     <ul class="blog-info-link mt-3 mb-4">
                            <li><a href="#"><i class="fa fa-user"></i> @Model.Article.Category.Name</a></li>
                            <li><a href="#"><i class="fa fa-comments"></i>@Model.Article.CommentCount yorum</a></li>
                     </ul>

                    
                     <p class="excert">
                            @Html.Raw(Model.Article.Content)
                     </p>
                  <hr />
                        <p class="text-center"> Okunma Sayısı :<span class="badge badge-info">@Model.Article.ViewCount </span>  Yorum Sayısı :<span class="badge badge-info"> @Model.Article.CommentCount </span></p>
               </div>
               <div class="navigation-top">
                  <div class="d-sm-flex justify-content-between text-center">
              
                     <ul class="social-icons">
                        <li><a href="@Model.Article.User.FacebookLink"><i class="fab fa-facebook-f"></i></a></li>
                        <li><a href="@Model.Article.User.TwitterLink"><i class="fab fa-twitter"></i></a></li>
                                
                        
                     </ul>
                  </div>
         
               </div>
               <div class="blog-author">
                  <div class="media align-items-center">
                     <img src="~/img/@Model.Article.User.Picture" alt="">
                     <div class="media-body">
                        <a href="#">
                           <h4>@Model.Article.User.UserName </h4>
                        </a>
                            <p>@Model.Article.User.About </p>
                     </div>
                  </div>
               </div>
                   
               <div class="comments-area">
                        <h4>@Model.Article.CommentCount Comments</h4>
                
                        @foreach(var comment in Model.Article.Comments  )
                        {
                              <div class="comment-list">
                     <div class="single-comment justify-content-between d-flex">
                        <div class="user justify-content-between d-flex">
                           <div class="thumb">
                              <img src="~/img/userImages/defaultUser.png" alt="">
                           </div>
                           <div class="desc">
                              <p class="comment">
                               @comment.Text
                              </p>
                              <div class="d-flex justify-content-between">
                                 <div class="d-flex align-items-center">
                                    <h5>
                                       <a href="#"> @comment.CreatedByName</a>
                                    </h5>
                                    <p class="date">December 4, 2017 at 3:12 pm </p>
                                 </div>
                                 <div class="reply-btn">
                                    <a href="#" class="btn-reply text-uppercase">reply</a>
                                 </div>
                              </div>
                           </div>
                        </div>
                     </div>
                  </div>
             
                        }

               </div>
               <div class="comment-form">
                  <h4>Bir Yorum Ekle</h4>
                  <form class="form-contact comment_form" action="#" id="commentForm">
                     <div class="row">
                        <div class="col-12">
                           <div class="form-group">
                              <textarea class="form-control w-100" name="comment" id="comment" cols="30" rows="9"
                                 placeholder="Write Comment"></textarea>
                           </div>
                        </div>
                        <div class="col-sm-6">
                           <div class="form-group">
                              <input class="form-control" name="name" id="name" type="text" placeholder="Name">
                           </div>
                        </div>
                        <div class="col-sm-6">
                           <div class="form-group">
                              <input class="form-control" name="email" id="email" type="email" placeholder="Email">
                           </div>
                        </div>
                        <div class="col-12">
                           <div class="form-group">
                              <input class="form-control" name="website" id="website" type="text" placeholder="Website">
                           </div>
                        </div>
                     </div>
                     <div class="form-group">
                        <button type="submit" class="button button-contactForm btn_1 boxed-btn">Gönder</button>
                     </div>
                  </form>
               </div>
                    
                   
              
            </div>
                
             
                </div>
            </div>
           
        </div>
       
      </div>
   </section>
   <!--================ Blog Area end =================-->