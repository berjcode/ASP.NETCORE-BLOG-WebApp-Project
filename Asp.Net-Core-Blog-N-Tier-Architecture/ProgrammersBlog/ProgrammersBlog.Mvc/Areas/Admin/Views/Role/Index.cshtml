@model ProgrammersBlog.Entities.Dtos.RoleListDto
@{
    Layout = "_Layout";
    ViewBag.Title = "Roller";
}

<div id="modalPlaceHolder" aria-hidden="true"></div>
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table mr-1"></i>
       Roller
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="rolesTable" width="100%" cellspacing="0">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Rol Adı</th>
                   
                </tr>
                </thead>
                <tfoot>
                <tr>
                        <th>#</th>
                        <th>Rol Adı</th>
                </tr>
                </tfoot>
                <tbody>
                @foreach (var role in Model.Roles)
                {
                        <tr name="@role.Id">
                            <td>@role.Id</td>
                            <td>@role.Name</td>
                       
                       
                    </tr>
                }

                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts
{
    <script src="~/js/roleIndex.js" type="application/ecmascript"></script>
}
@section Styles
{
    
}
